@model List<StoreDB.Entities.Store>


@using (Ajax.BeginForm(new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "update",
    LoadingElementId = "loader"
}))
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Products</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @Ajax.ActionLink("Show all", "ShowProducts", "Home", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "results" })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
